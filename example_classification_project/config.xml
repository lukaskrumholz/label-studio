        <Choice value="202 - Invoice" alias="735" />
        <Choice value="222 - Contract" alias="222" />
        <Choice value="231 - Proposal" alias="135" />
        <Choice value="244 - Specification" alias="244" />
        <Choice value="367 - Mail" alias="367" />
        <Choice value="333 - Document Type A" alias="333" />
        <Choice value="621 - Personnel Record" alias="231" />
        <Choice value="723 - Documentation" alias="110" />
        <Choice value="890 - Document Type B" alias="990" />
        <Choice value="891 - Document Type C" alias="991" />
        <Choice value="892 - Document Type D" alias="992" />
        <Choice value="893 - Document Type E" alias="993" />
        <Choice value="894 - Document Type F" alias="994" />
        <Choice value="895 - Document Type G" alias="995" />
        <Choice value="896 - Document Type H" alias="996" />
        <Choice value="897 - Document Type I" alias="997" />
        <Choice value="898 - Document Type J" alias="998" />
        <Choice value="899 - Document Type K" alias="999" />
