    </View>
    <View style="height: 120px; border-radius: 3px; overflow-y: auto;">
      <Choices name="choice_type" toName="image" choice="label" showInLine="false" required="true" alias="Document Type">
        <Choice value="124 - Cover Letter" alias="124" />
