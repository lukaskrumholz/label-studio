    </View>

    <View style="margin-top: 3em; border-radius: 3px">
      <Header value="Color:" size="5"/>
      <Filter name="fl_choice_color" toName="choice_color" placeholder="Color" hotkey="shift+2" minlength="1"/>
      <Choices name="choice_color" toName="image" choice="label" showInLine="true" required="true">
        <Choice value="Color" />
        <Choice value="BW" />
      </Choices>
    </View>
  
    <View style="height: 100px; margin-top: 3em; border-radius: 3px">
      <Header value="Employee Name:" size="5"/>
      <TextArea name="free_text_answer" toName="image" placeholder="Employee Name" showSubmitButton="false" maxSubmissions="1" editable="true" required="true" hotkey="shift+3"/>
    </View>
  </View>

</View>